<p id="notice"><%= notice %></p>

<%= render 'form', url: @url %>

<table>
  <thead>
    <tr>
      <th>URL</th>
      <th>Short URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original %></td>
        <td><%= link_to url.short_url, url.short_url %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
